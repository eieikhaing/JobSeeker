<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#2196f3" />
            <corners
                    android:radius="10dp" />
            <padding
                    android:left="10dp"
                    android:top="15dp"
                    android:right="10dp"
                    android:bottom="15dp" />
          
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ffffff" />
            <stroke android:color="#2196f3"
                android:width="2dp"/>
            <corners
                    android:radius="15dp" />
            <padding
                    android:left="15dp"
                    android:top="15dp"
                    android:right="15dp"
                    android:bottom="15dp" />
        </shape>
    </item>
</selector>